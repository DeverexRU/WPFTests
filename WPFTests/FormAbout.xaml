                                           VerticalAlignment="Center"
                                           TextAlignment="Center"
                                           TextWrapping="Wrap"
                                           FontWeight="Medium"
                                           Margin="5,0"
                                           FontSize="{StaticResource FontSize}"
                                           Text="{TemplateBinding Content}"/>
